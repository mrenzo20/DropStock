{% extends 'base.html.twig' %}

{% block content %}
    <h1>Site</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ site.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ site.url }}</td>
            </tr>
            <tr>
                <th>Software</th>
                <td>{{ site.platform }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ site.status }}</td>
            </tr>
	    <tr>
                <th>Json</th>
                <td></td>
            </tr>
	    <tr>
                <th>Dump</th>
                <td><pre></pre></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('site_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('site_edit', { 'id': site.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
