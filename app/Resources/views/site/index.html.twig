{% extends 'base.html.twig' %}

{% block body %}
    <h1>Site list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="{{ path('site_show', { 'id': site.id }) }}">{{ site.id }}</a></td>
                <td>{{ site.name }}</td>
                <td>{{ site.url }}</td>
                <td>{{ site.status }}</td>
                <td>{% if site.created %}{{ site.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('site_show', { 'id': site.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('site_edit', { 'id': site.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('site_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
